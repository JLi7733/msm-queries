<h1>
  List of all actors
</h1>
<hr>

<table border = 1>
  <tbody>
  <tr>
    <th>
      ID
    </th>
    <th>
      Image
    </th>
    <th>
      Name
    </th>
    <th>
      Dob
    </th>
    <th>
    </th>
    </tr>
    <% @actors.each do |actor| %>
      <tr>
        <td><%= actor.id %></td>
        <td>
          <%= image_tag(actor.image, style: "width: 250px;")%>
        </td>
        <td><%= actor.name %></td>
        <td><%= actor.dob %></td>
        <td>
          <%= link_to 'Show Details', "/actors/#{actor.id}", class: 'btn btn-primary' %> <!-- Link to the director's show page -->
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
